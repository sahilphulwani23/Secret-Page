<%- include('partials/header') %>

<div class="container login-register-div">
  <h1 style="color:#402828 ;">Login</h1>

  <div class="row">
    <div class="col-sm-8">
          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label class="login-reg-label" for="email">Email</label>
              <input type="email" class="form-control login-reg-input" name="username">
            </div>
            <div class="form-group">
              <label class="login-reg-label" for="password">Password</label>
              <input type="password" class="form-control login-reg-input" name="password">
            </div>
            <button type="submit" class="btn btn-dark login-reg-btn">Login</button>
          </form>
          <hr style="border: 1px solid;">
          <div>
            <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Sign In with Google
            </a>
          </div>
    </div>


  </div>
</div>

<%- include('partials/footer') %>
